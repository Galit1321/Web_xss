extends layout


block content
   h1 hi #{title}!
   table(border='1')
      thead
         tr
            th title
            th Post
      tbody
         tr
            td= "first response!"
            td= "hello"
         for item in pagePosts
            tr
               td= item.titl
               td= item.txt
            !{item.txt}
   form(name="Posting", method="POST" action="/massage" )
      div.input
         span.label post
         input(type="textArea", name="txt_field" height="100")
      div.actions
         input(type="submit", value="Post")